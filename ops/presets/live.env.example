# Live preset (no secrets)

# Core network
HTTP_ONLY=false
DEMO_MODE=false
PORT=8080
HEALTH_PORT=8081

# Security headers & content enforcement
SECURITY_HEADERS=true
STRICT_CONTENT_TYPE=true

# Logging & privacy
JSON_LOGS=true
PII_MASK=true
LOG_REDACT_LIST=apikey,token,secret

# Rate limiting (app-level)
RL_ENABLED=true
RL_WINDOW_MS=10000
RL_MAX=10

# Telegram anti-spam
TG_COOLDOWN_ENABLED=true
TG_COOLDOWN_MS=1500
TG_COOLDOWN_BURST=3

# Invariants / Idempotency
INVARIANTS_STRICT=true
IDEMP_ENABLED=true
IDEMP_TTL_MS=60000

# Alerts & auto-guard
ALERTS_ENABLED=true
ALERT_SLO_P95_MS=1500
ALERT_ERR_RATE_PCT=1.0
ALERT_BREAKER_RATE_PCT=2.0
ALERT_CREDITS_REMAIN_PCT=10
ALERT_DEBOUNCE_MS=60000
AUTO_GUARD_ENABLED=true
AUTO_GUARD_COOLDOWN_MS=300000

# Budget guard
BUDGET_ENABLED=true
BUDGET_CREDITS_DAILY=1000
BUDGET_ACTION=degrade
BUDGET_DEBOUNCE_MS=60000

# Rules (leave OFF until you populate ops/{allowlist,denylist}.txt)
RULES_ENABLED=false
RULES_RELOAD_MS=0

# Freeze switches (only for maintenance drills)
MAINTENANCE_MODE=false
BREAKER_FORCE_OPEN=false
READONLY_MODE=false



# Signals (default off)
SIGNALS_ENABLED=false
SIGNALS_POLL_MS=5000
SIGNALS_WS_ENABLED=false
SIGNALS_BROADCAST_ENABLED=false
SIGNALS_CHANNEL_ID=

# Optional HMAC partner gate (default off)
HMAC_API_ENFORCE=false
HMAC_API_SECRET=

